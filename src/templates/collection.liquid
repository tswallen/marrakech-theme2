{% paginate collection.products by 12 %}
  <div class="store">
    <h1 class="store-h1">Store</h1>
    <div class="store-products">
      {% for product in collection.products %}
        <a class="store-product" href="{{ product.url | within: collection }}">
          <aside class="store-product-aside">
            <img class="store-product-aside-img" src="{{ product.featured_image | img_url: '250x250' }}">
          </aside>
          <main class="store-product-main">
            <h3 class="store-product-main-h3">{{ product.title }}</h3>
            <span class="store-product-main-span">{{ product.price | money }}</span>
          </main>
        </a>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}
  </div>
{% endpaginate %}

<style>
    .store {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    .store-h1 {
      margin: 1em 1em 0em 1em;
    }
    .store-products {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }
    .store-product {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 1em 2.5em 0em 2.5em;
      box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
      text-decoration: none;
    }
    .store-product-aside {
        display: flex;
    }
    .store-product-aside-img {
        width: 100%;
    }
    .store-product-main {
        display: flex;
        flex-direction: column;
        margin: 1em;
    }
    .store-product-main-h3 {
        margin: 0;
        color: #020BC8;
        font-weight: bold;
        text-transform: uppercase;
        font-family: 'Archivo Black', sans-serif;
    }
    .store-product-main-span {
        margin: 1em 0em 0em 0em;
        color: #020B43;
        font-weight: bold;
        font-family: 'Archivo Black', sans-serif;
        text-align: right;
    }
    @media (min-width: 900px) {
      .store-product {
        flex-direction: column;
        max-width: 15em;
      }
    }
  </style>
