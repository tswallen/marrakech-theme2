      },
      {
          "type":"textarea",
          "id":"reason_2_text",
          "label":"Reason 2 text"
      },
      {
          "type":"header",
          "content":"Reason 3"
      },
      {
          "type":"checkbox",
          "id":"show_reason_3",
          "label":"Show reason 3"
      },
      {
          "type":"image_picker",
          "id":"reason_3_img",
          "label":"Reason 3 image"
      },
      {
          "type":"textarea",
          "id":"reason_3_text",
          "label":"Reason 3 text"
      }
