<div class="credibility">
  <img src="{{ section.settings.banner_img | img_url: '500x250' }}" class="desktop">
  <main class="credibility-main">
    <h1 class="credibility-main-h1">{{ section.settings.heading | escape }}</h1>
    <div class="credibility-main-reasons">
      {% if section.settings.show_reason_1 %}
      <div class="credibility-main-reason">
        <img src="{{ section.settings.reason_1_img | img_url: '75x75' }}">
        <p class="credibility-main-reason-text">{{ section.settings.reason_1_text | escape }}</p>
      </div>
      {% endif %}
      {% if section.settings.show_reason_2 %}
      <div class="credibility-main-reason">
        <img src="{{ section.settings.reason_2_img | img_url: '75x75' }}">
        <p class="credibility-main-reason-text">{{ section.settings.reason_2_text | escape }}</p>
      </div>
      {% endif %}
      {% if section.settings.show_reason_3 %}
      <div class="credibility-main-reason">
        <img src="{{ section.settings.reason_3_img | img_url: '75x75' }}">
        <p class="credibility-main-reason-text">{{ section.settings.reason_3_text | escape }}</p>
      </div>
      {% endif %}
    </div>
  </main>
</div>

{% schema %}
  {
    "name":"Credibility",
    "settings":[
      {
          "type":"header",
          "content":"Banner Image"
      },
      {
          "type":"checkbox",
          "id":"show_banner_image",
          "label":"Show banner image"
      },
      {
          "type":"image_picker",
          "id":"banner_img",
          "label":"Banner image"
      },
      {
          "type":"header",
          "content":"Heading"
      },
      {
          "type":"text",
          "id":"heading",
          "label":"Heading text",
          "default":"Why choose us?"
      },
      {
          "type":"header",
          "content":"Reason 1"
      },
      {
          "type":"checkbox",
          "id":"show_reason_1",
          "label":"Show reason 1"
      },
      {
          "type":"image_picker",
          "id":"reason_1_img",
          "label":"Reason 1 image"
      },
      {
          "type":"textarea",
          "id":"reason_1_text",
          "label":"Reason 1 text"
      },
      {
          "type":"header",
          "content":"Reason 2"
      },
      {
          "type":"checkbox",
          "id":"show_reason_2",
          "label":"Show reason 2"
      },
      {
          "type":"image_picker",
          "id":"reason_2_img",
          "label":"Reason 2 image"
      },
      {
          "type":"textarea",
          "id":"reason_2_text",
          "label":"Reason 2 text"
      },
      {
          "type":"header",
          "content":"Reason 3"
      },
      {
          "type":"checkbox",
          "id":"show_reason_3",
          "label":"Show reason 3"
      },
      {
          "type":"image_picker",
          "id":"reason_3_img",
          "label":"Reason 3 image"
      },
      {
          "type":"textarea",
          "id":"reason_3_text",
          "label":"Reason 3 text"
      }
    ],
    "presets":[
      {
          "name":"Credibility",
          "category":"Store Information"
      }
    ]
  }
{% endschema %}

{% stylesheet 'scss' %}
  .credibility {
    display: flex;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  }
  .credibility-main {
    flex: auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  .credibility-main-h1 {
    padding: 1em 1em 0em 1em;
    font-weight: 300;
    margin: 0em;
  }
  .credibility-main-reasons {
    display: flex;
    flex: auto;
    align-items: center;
    overflow-x: auto;
  }
  .credibility-main-reason {
    display: flex;
    padding: 0em 1em;
    align-items: center;
    margin: auto;
  }
  .credibility-main-reason-text {
    padding: 1em;
    max-width: 10em;
    min-width: 7.5em;
    margin: 0;
  }
  @media (min-width: 900px) {
    .credibility-main-h1 {
      padding: 1em 1em 0em 1em;
    }
    .credibility-main-reason {
      padding: 1em 2.5em;
    }
  }
{% endstylesheet %}