{% stylesheet %}
  .credibility {
    display: flex;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  }
  .credibility-main {
    flex: auto;
    padding: 1em;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  .credibility-main-reasons {
    display: flex;
    justify-content: space-around;
    flex: auto;
    align-items: center;
    overflow-x: auto;
  }
  .credibility-main-reason {
    display: flex;
    padding: 1em 2.5em;
    align-items: center;
  }
  .credibility-main-reason-text {
    padding: 1em;
    max-width: 10em;
  }
{% endstylesheet %}