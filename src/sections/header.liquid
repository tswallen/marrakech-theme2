{% stylesheet %}
  .header {
    display: flex;
    align-items: center;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  }

  .header-button {
    padding: .5em;
    border: 1px solid lightgray;
  }

  .header-button:not(:first-of-type) {
    margin: 0em 0em 0em 1em;
  }

  .header-link:not(:first-of-type) {
    margin: 0em 0em 0em 1em;
  }

  #header-dropdown {
    display: none;
    position: absolute;
  }

  .header-popover {
    display: none;
    position: absolute;
  }

  @media (min-width: 900px) {
    #header-dropdown {
      display: none !important;
      position: absolute;
    }
  }
{% endstylesheet %}

