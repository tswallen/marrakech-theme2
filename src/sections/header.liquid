{% stylesheet 'scss' %}
  .navigation {
    display: flex;
    align-items: center;
    padding: 1em;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    position: fixed;
    background: rgba(255,255,255,1);
    width: calc(100% - 2em);
  }
  .navigation-button {
    border: 1px solid gray;
    padding: .5em;
  }
  .navigation-logo {
    font-size: 1.5em;
  }
  .navigation-dropdown-trigger {
    border: 1px solid gray;
    padding: .5em;
  }
  .navigation-dropdown-main {
    display: none;
    left: 0;
    width: 100%;
    position: absolute;
    height: 100%;
    margin-top: 1.5em;
    background: rgba(255,255,255,1);
  }
  .navigation-popover {
    margin: 0em 0em 0em 1em;
  }
  .navigation-popover-main {
    display: none;
    position: absolute;
    transform: translateX(calc(-100% + 1em));
    background: rgba(255,255,255,1);
  }

  @media (min-width: 900px) {
    .navigation-button {
      margin: 0em 1em 0em 0em;
    }
  }
{% endstylesheet %}