{% javascript %}
  let showGuarantee = false;
  let showShipping = false;
  let showAbout = false;
  let showDropdown = false;

  document.getElementById('guarantee-button').addEventListener('click', toggleGuarantee);
  document.getElementById('shipping-button').addEventListener('click', toggleShipping);
  document.getElementById('about-button').addEventListener('click', toggleAbout);
  Array.from(document.getElementsByClassName('close')).forEach(function(button) {button.addEventListener('click', close);});
  document.getElementById('dropdown-toggle').addEventListener('click', toggleDropdown);

  function toggleGuarantee() {
    showGuarantee = !showGuarantee;

    if (showGuarantee) {
      document.getElementById('guarantee-dropdown').style.display = 'block';
      return;
    }

    document.getElementById('guarantee-dropdown').style.display = 'none';
  }

  function toggleShipping() {
    showShipping = !showShipping;

    if (showShipping) {
      document.getElementById('shipping-dropdown').style.display = 'block';
      return;
    }

    document.getElementById('shipping-dropdown').style.display = 'none';
  }

  function toggleAbout() {
    showAbout = !showAbout;

    if (showAbout) {
      document.getElementById('about-dropdown').style.display = 'block';
      return;
    }

    document.getElementById('about-dropdown').style.display = 'none';
  }

  function close() {
    showGuarantee = false;
    showShipping = false;
    showAbout = false;
    document.getElementById('guarantee-dropdown').style.display = 'none';
    document.getElementById('shipping-dropdown').style.display = 'none';
    document.getElementById('about-dropdown').style.display = 'none';
  }

  function toggleDropdown() {
    showDropdown = !showDropdown;

    if (showDropdown) {
      document.getElementById('header-dropdown').style.display = 'block';
      return;
    }

    document.getElementById('header-dropdown').style.display = 'none';
  }

{% endjavascript %}

